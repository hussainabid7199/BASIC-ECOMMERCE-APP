<%- include("partials/header") %>
<section>
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-6 login-inner">
        <div class="container my-5">
          <div class="login-logo d-flex justify-content-center">
            <img src="/assets/image/logo/Screenshot 2022-09-29 021109.png" alt="" class="img-fluid">
          </div>
          <div class="login-brand-name d-flex justify-content-center">
            <h3>BigBooster.in</h3>
          </div>
        </div>

        <div class="container d-flex justify-content-center">
          <div class="login-form">
            <form action="/login" method="post">
              <input type="number" name="phone-login" class="form-control" id="phone" placeholder="Email ID or Mobile No.">
              <input type="password" name="password-login" id="password" class="form-control" placeholder="Password">
              <div class="forget-password-login d-flex justify-content-end mt-4 mb-2">
                <a href="/forgotpassword">Forgot Password?</a>
              </div>
              <div class="button">
                <button type="submit" class="form-control btn btn-success">Login</button>
              </div>
            </form>

            <div class="container d-flex justify-content-center my-4">
              <hr class="login-hr"> <h2 class="login-or">Or</h2> <hr class="login-hr">
            </div>
           <div class="container d-flex justify-content-center">
            <%- include("components/google-login") %>
           </div>

           <div class="newbees d-flex justify-content-center my-3">
            <p><a href="/signup"><b>New to BigBooster?</b>&nbsp;&nbsp;<span class="theam-text-col"><b>Signup Now</b></span></a></p>
           </div>

          </div>
          
        </div>
      </div>
      <div class="col-lg-6">
        <div class="container-fluid login-image-inner">
          <img src="/assets/image/main/Homepage/header pic.png" alt="" class="img-fluid">
        </div>
      </div>
    </div>
  </div>
</section>



<%- include("partials/jsCDNfooter") %>