<%- include("partials/header") %>
    <section>
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6 login-inner">
                    <div class="container my-5">
                        <div class="login-logo d-flex justify-content-center">
                            <img src="/assets/image/logo/Screenshot 2022-09-29 021109.png" alt="" class="img-fluid">
                        </div>
                        <div class="login-brand-name d-flex justify-content-center">
                            <h3>BigBooster.in</h3>
                        </div>
                    </div>

                    <div class="container d-flex justify-content-center">
                        <div class="container mt-5 mb-3 forget-password">
                            <h3>Verify Certificate</h3>
                            <p>Verify your certificate and offer letter by entering the Certificate Id or Employment ID.</p>
                        </div>
                    </div>

                    <div class="container d-flex justify-content-center">
                        <div class="login-form">
                            <form action="/login" method="post">
                                <input type="text" name="forget-password" class="form-control" id="forget-password"
                                    placeholder="Certificate ID or Employment ID">
                                <div class="button">
                                    <button type="submit" class="form-control btn btn-success">Verify Now</button>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="container-fluid login-image-inner">
                        <img src="/assets/image/main/Homepage/header pic.png" alt="" class="img-fluid">
                    </div>
                </div>
            </div>
        </div>
    </section>



